{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "standard",
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "space-before-function-paren": [
            "error",
            "never"
        ],
        "no-unused-vars": "off",
        "no-undef": "off",
        "quotes": [
            "error",
            "single"
        ]
    }
}